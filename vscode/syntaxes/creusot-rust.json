{
    "scopeName": "source.rust.embedded.creusot",
    "injectionSelector": "L:source.rust -string -comment",
    "patterns": [
        {
            "begin": "#\\[",
            "end": "\\]",
            "contentName": "meta.embedded.creusot source.creusot",
            "patterns": [
                { "match": "\\b(?:open|law|logic|trusted|bitwise_proof|check|erasure)\\b",
                  "name": "keyword" },
                { "include": "#paren" },
                { "include": "#string" }
            ]
        }
    ],
    "repository": {
        "innerkeywords": {
            "match": "\\b(?:prophetic|self|terminates|ghost)\\b",
            "name": "keyword"
        },
        "paren": {
            "patterns": [
                { "include": "#parentheses" },
                { "include": "#brackets" },
                { "include": "#braces" }
            ]
        },
        "parentheses": {
            "begin": "\\(",
            "end": "\\)",
            "beginCaptures": {
                "0": { "name": "punctuation.section.parens.begin" }
            },
            "endCaptures": {
                "0": { "name": "punctuation.section.parens.end" }
            },
            "patterns": [
                { "include": "#innerkeywords" },
                { "include": "#paren" }
            ]
        },
        "brackets": {
            "begin": "\\[",
            "end": "\\]",
            "beginCaptures": {
                "0": { "name": "punctuation.section.bracket.begin" }
            },
            "endCaptures": {
                "0": { "name": "punctuation.section.bracket.end" }
            },
            "patterns": [
                { "include": "#paren" }
            ]
        },
        "braces": {
            "begin": "\\(",
            "end": "\\)",
            "beginCaptures": {
                "0": { "name": "punctuation.section.parens.begin" }
            },
            "endCaptures": {
                "0": { "name": "punctuation.section.parens.end" }
            },
            "patterns": [
                { "include": "#paren" }
            ]
        },
        "string": {
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "match": "\\\\.",
                    "name": "constant.character.escape.untitled"
                }
            ],
            "name": "string.quoted.double"
        }
    }
}
