{
  "name": "creusot-ide",
  "displayName": "Creusot IDE",
  "description": "LSP client for Creusot",
  "version": "0.1.1",
  "publisher": "lysxia",
  "repository": "https://github.com/creusot-rs/creusot-ide",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:rust",
    "onLanguage:coma",
    "onLanguage:why3session",
    "onLanguage:why3proof"
  ],
  "main": "./out/main.js",
  "contributes": {
    "commands": [
        {
            "command": "creusot.build",
            "title": "Creusot Build"
        },
        {
            "command": "creusot.why3ide",
            "title": "Launch Why3 IDE"
        },
        {
            "command": "creusot.prove",
            "title": "Why3find Prove"
        }
    ],
    "languages": [
      {
        "id": "coma",
        "extensions": [".coma"]
      },
      {
        "id": "why3session",
        "filenames": ["why3session.xml"]
      },
      {
        "id": "rust",
        "extensions": [".rs"]
      },
      {
        "id": "why3proof",
        "filenames": ["proof.json"]
      }
    ],
    "taskDefinitions": [
        {
            "type": "creusot"
        }
    ],
    "menus": {
        "editor/context": [
            {
                "command": "creusot.why3ide",
                "group": "2_creusot"
            }
        ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build-base -- --minify",
    "build-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "build": "npm run build-base -- --sourcemap",
    "watch": "npm run build-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "lint": "prettier --check . && eslint . --ext .ts,.tsx",
    "fix": "prettier --write . && eslint . --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "esbuild": "^0.17.11",
    "eslint": "^7.21.0",
    "js-yaml": "^4.1.0",
    "ovsx": "^0.8.0",
    "prettier": "2.8.4",
    "typescript": "^4.2.2",
    "@vscode/vsce": "^3.1.0"
  }
}
