{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "Build Server",
            "type": "shell",
            "command": "dune",
            "args": ["build", "--root=server"],
            "problemMatcher": [
                "$ocamlc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Extension",
            "group": "build",
            "type": "npm",
            "script": "build",
            "path": "vscode/",
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/vscode/"
                ]
            }
        },
        {
            "label": "Build Server and Extension",
            "dependsOn": [
                "Build Server",
                "Build Extension"
            ],
            "problemMatcher": [
                "$ocamlc",
                "$tsc"
            ]
        }
    ]
}
